<% if obj.errors.any? %>
  <div class="ui error floating message">
    <i class="close icon"></i>
    <div class="header">The following errors prevented the <%= obj.class.name.downcase %> from being saved</div>
    <ul>
      <% obj.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
