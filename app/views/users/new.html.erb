  
<%= render 'shared/errors', obj: @user%>
<h2 class="ui center aligned icon header">
  New Account
</h2>

<div class="ui centered raised card signup-form-card">
  <div class="content">
    <%= form_with(model:@user, local:true, class: "ui form") do |f|%>
      <div class="field">
        <label><%= f.label :username %></label>
        <%= f.text_field :username, placeholder: "Username"%>
      </div>
      <div class="field">
        <label><%= f.label :password%></label>
          <%= f.password_field :password, placeholder: "Password"%>
      </div>
      <div class="field">
        <label><%= f.label :password_confirmation %></label>
        <%= f.password_field :password_confirmation, placeholder: "Confirm Password"%>
      </div>
      <%= f.submit "Sign Up", class: "ui orange button" %>
     <%end%>
  </div>
</div>
